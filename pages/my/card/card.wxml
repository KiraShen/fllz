<view class="page">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
                    <image src="{{avatarUrl}}" style="width: 50px; height: 50px; display: block"/>
                </view>
                <view class="weui-cell__bd">
                    <view>{{name}}【{{cardname}}】</view>
                    <view style="font-size: 13px;color: #888888;">有效期至:{{time}}</view>
                </view>
            </view>
             <view class="weui-cell weui-cell_access" bindtap="openMembership">
	            <view class="weui-cell__bd">
	                <view style="display: inline-block; vertical-align: middle">开通高级会员获取更多权益</view>
	            </view>
	            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
	        </view>
             <view class="weui-cell weui-cell_access" bindtap="showMembershipList">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle">我的会员开通记录</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
        </view>

    </view>
</view>