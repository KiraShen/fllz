                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view> -->
        </view>
        <text>当前会员权益：</text>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle;" style="#8a8a8a">每天可搜索证书次数:</view>
                </view>
                <view style="display: inline-block; vertical-align: middle;color:#3cc51f;">{{searchCount}}</view>
            </view>

            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle;" style="#8a8a8a">微信最多可绑定人数:</view>
                </view>
                <view style="display: inline-block; vertical-align: middle;color:#3cc51f;">{{bindCount}}</view>
            </view>

            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle;" style="#8a8a8a">当前查询订单服务:</view>
                </view>
                <view style="display: inline-block; vertical-align: middle;color:#3cc51f;">{{orderShow}}</view>
            </view>
        </view>
    </view>
</view>